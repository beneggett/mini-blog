<%= simple_form_for @author do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name, label: 'First', placeholder: "Your first name" %>
  <%= f.input :last_name, placeholder: "Your last name" %>
  <%= f.input :username, placeholder: "Create a username" %>
  <%= f.input :bio, input_html: {rows: 3}, placeholder: "Please tell your readers more about yourself..." %>
  <%= f.input :email, placeholder: 'email@example.com' %>
  <%= f.input :twitter, placeholder: "@username", hint: "This is your twitter handle" %>
  <%= f.input :password, hint: "Must be at least 6 characters", placeholder: 'Create a password' %>
  <%= f.input :password_confirmation, placeholder: 'Confirm your password' %>

  <%= f.button :submit %>
<% end %>